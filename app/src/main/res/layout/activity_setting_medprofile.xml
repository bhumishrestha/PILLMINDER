<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting_medprofile"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        android:text="Settings"
        android:textColor="#efefed"
        android:textSize="40sp" />

    <AutoCompleteTextView
        android:drawableStart="@drawable/ic_local_hospital_black_24dp"
        android:id="@+id/autotext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Medicine"
        android:textColorHint="#518cbc"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        />

    <AutoCompleteTextView
        android:drawableStart="@drawable/ic_local_hospital_black_24dp"
        android:id="@+id/autotext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Medicine"
        android:textColorHint="#518cbc"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_marginHorizontal="120dp"
        android:src="@drawable/timer"
        android:onClick="alarm"/>

    <TextView
        android:layout_width="240dp"
        android:layout_height="41dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="20dp"
        android:text="Set date and time"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medicine Profile "
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:onClick="medpro"/>

</LinearLayout>