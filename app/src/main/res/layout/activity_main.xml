<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fbg"
    android:orientation="vertical">

    <TextView
        android:layout_marginHorizontal="75sp"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textColor="#112f5e"
        android:text="Pillminder" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="333dp"
        android:padding="30dp"
        app:srcCompat="@drawable/frontimg" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Don't miss eating pills."
        android:textSize="33sp"
        android:layout_marginBottom="60dp"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="225dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="160dp"
        android:background="#eded2d"
        android:text="Start Now"
        android:onClick="start"/>


</LinearLayout>